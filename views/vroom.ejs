<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script>
			var token = "<%= token %>";
			var channelName = "<%= channelName %>";
			var uid = "<%= uid %>";
			var agoraAppId = "<%= agoraappID %>";
			var screenuid = "<%= screenuid %>";
			var screentoken = "<%= screentoken %>";
			
		</script>
		<link rel="stylesheet" href="/video-style.css" />
		<title>Video Call App</title>
	</head>
	<body>
		<div class="main">
			<div id="main__left" style="width: 100%;">
				<div class="main__videos">
					<div id="video-grid"></div>
				</div>
				<div class="main__controls">
					<div class="main__controls__block">
						<div class="main__controls__button main__mute__button" id="mic-btn">
							<i id="mic-icon" class="fas fa-microphone"></i>
							<span>Mute</span>
						</div>
						<div
							id="video-btn"
							class="main__controls__button main__video__button"
						>
							<i id="video-icon" class="fas fa-video"></i>
							<span id="setvideo">Stop Video</span>
						</div>
						<div
							onclick="screen()"
							class="main__controls__button main__ss__button" id="screen-share-btn"
						>
							<i class="fas fa-video" id="screen-share-icon"></i>
							<span id="screen-share">Screen Share</span>
						</div>
					</div>
					<div class="main__controls__block">
						<div class="main__controls__button">
							<i class="fas fa-shield-alt"></i>
							<span>Security</span>
						</div>
						<div class="main__controls__button">
							<i class="fas fa-user-friends"></i>
							<span>Participants</span>
						</div>
						<div class="main__controls__button" onclick="chat()">
							<i class="fas fa-comment-alt"></i>
							<span>Chat</span>
						</div>
					</div>
					<div class="main__controls__block">
						<div class="main__controls__button">
							<span class="leave-meeting">Leave Meeting</span>
						</div>
					</div>
				</div>
			</div>
			<div id="main__right">
				<div class="main__header">
					<p>Chat</p>
				</div>
				<div id="main__chat__window" >
					
				</div>

				<div class="main__message__container">
					<input
						id="chat_message"
						type="text"
						placeholder="Type message here..."
					/>
					<button class="send" onclick="message()">Send</button>
				</div>
			</div>
		</div>

		<!-- <button onclick="muteunmute()" id="mute">Mute</button> -->
	</body>
	<script src="/socket.io/socket.io.js" defer></script>
	<script src="/grid_resize.js" defer></script>
